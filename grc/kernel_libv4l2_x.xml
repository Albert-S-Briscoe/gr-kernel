<?xml version="1.0"?>
<block>
  <name>LibV4L2 Source</name>
  <key>kernel_libv4l2_x</key>
  <category>Sources</category>
  <import>import kernel</import>
  <make>kernel.libv4l2_x($filename)</make>
  <param>
    <name>File</name>
    <key>filename</key>
    <value>/dev/video0</value>
    <type>file_open</type>
  </param>
  <param>
    <name>Output Type</name>
    <key>type</key>
    <type>enum</type>
    <option>
      <name>Complex</name>
      <key>complex</key>
      <opt>size:gr.sizeof_gr_complex</opt>
    </option>
    <!--
    <option>
      <name>Float</name>
      <key>float</key>
      <opt>size:gr.sizeof_float</opt>
    </option>
    <option>
      <name>Int</name>
      <key>int</key>
      <opt>size:gr.sizeof_int</opt>
    </option>
    <option>
      <name>Short</name>
      <key>short</key>
      <opt>size:gr.sizeof_short</opt>
    </option>
    <option>
      <name>Byte</name>
      <key>byte</key>
      <opt>size:gr.sizeof_char</opt>
    </option>
    -->
  </param>
  <source>
    <name>out</name>
    <type>$type</type>
  </source>
</block>
