<?xml version="1.0"?>
<block>
  <name>LibV4L2 Source</name>
  <key>kernel_libv4l2_x</key>
  <category>Sources</category>
  <import>import kernel</import>
  <make>kernel.libv4l2_x($filename)
#if 1
self.$(id).set_samp_rate($samp_rate)
#end if
#if 1
self.$(id).set_center_freq($center_freq0)
#end if
#if 1
self.$(id).set_bandwidth($bandwidth0)
#end if
  </make>
  <callback>set_samp_rate($samp_rate)</callback>
  <callback>set_center_freq($center_freq0)</callback>
  <callback>set_bandwidth($bandwidth0)</callback>
  <param>
    <name>File</name>
    <key>filename</key>
    <value>/dev/video0</value>
    <type>file_open</type>
  </param>
  <param>
    <name>Output Type</name>
    <key>type</key>
    <type>enum</type>
    <option>
      <name>Complex</name>
      <key>complex</key>
      <opt>size:gr.sizeof_gr_complex</opt>
    </option>
    <!--
    <option>
      <name>Float</name>
      <key>float</key>
      <opt>size:gr.sizeof_float</opt>
    </option>
    <option>
      <name>Int</name>
      <key>int</key>
      <opt>size:gr.sizeof_int</opt>
    </option>
    <option>
      <name>Short</name>
      <key>short</key>
      <opt>size:gr.sizeof_short</opt>
    </option>
    <option>
      <name>Byte</name>
      <key>byte</key>
      <opt>size:gr.sizeof_char</opt>
    </option>
    -->
  </param>
  <param>
    <name>Samp Rate (Sps)</name>
    <key>samp_rate</key>
    <value>samp_rate</value>
    <type>real</type>
  </param>
  <param>
    <name>Ch0: Center Freq (Hz)</name>
    <key>center_freq0</key>
    <value>87500000</value>
    <type>real</type>
  </param>
  <param>
    <name>Ch0: Bandwidth (Hz)</name>
    <key>bandwidth0</key>
    <value>0</value>
    <type>real</type>
  </param>
  <source>
    <name>out</name>
    <type>$type</type>
  </source>
</block>
